<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity"
    android:background="@drawable/bg"
    android:layout_margin="10dp"
    >

    <TextView
        android:id="@+id/text_SignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register an Account"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/SignUpFname"
        android:layout_below="@id/text_SignUp"
        android:hint="First-Name"


        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="#606fa8dc"

        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:padding="20dp"
        android:drawablePadding="20dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/SignUpLname"
        android:layout_below="@id/SignUpFname"
        android:hint="Last Name"



        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="#606fa8dc"

        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:padding="20dp"
        android:drawablePadding="20dp"
        />

    <EditText
        android:id="@+id/SignUpEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:layout_below="@+id/SignUpLname"

        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="#606fa8dc"

        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:padding="20dp"
        />

    <EditText
        android:id="@+id/SignUpPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:layout_below="@+id/SignUpEmail"

        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="#606fa8dc"

        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:padding="20dp"
        />

    <Button
        android:id="@+id/SignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SignUpPassword"
        android:text="Sign up"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="30dp"
        android:textSize="25dp"
        />

    <TextView

        android:id="@+id/text_existing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SignUp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="Existing User Login"
        android:textAlignment="center"
        android:textStyle="bold"
        />

</RelativeLayout>